QMainWindow {
    background-color: #f5f5f5; /* Light gray background */
    color: #333333; /* Dark text color */
}

QPushButton {
    background-color: #4CAF50; /* Green button */
    color: white;
    border: none;
    padding: 8px 16px;
    border-radius: 4px;
}

QPushButton:hover {
    background-color: #45a049; /* Darker green on hover */
}

QLabel {
    font-size: 14px;
    color: #333333;
}

QLineEdit {
    border: 1px solid #cccccc;
    border-radius: 4px;
    padding: 4px;
}